#!/bin/bash

echo "Select the option";
echo "1. insert record"
echo "2. search"
echo "3. display specific employee record"
echo "4. sort the records"
echo "5. list the records"
echo "6. delete record "
echo "7. Exit from menu "
echo -n "Enter your menu choice [1-6]: "

Insert(){
	echo "Enter Employee Name: \c"
	read ename

        echo "Enter Employee id: \c"
        read eid
           
        echo "Enter Employee Age : \c"
        read eage

        echo "Enter Employee Gender: \c"
        read egen
         
        echo "Enter Employee Designation : \c"
        read edes

        echo "Enter Employee Basic Salary : \c"
        read esal

           
        echo "$ename,$eid,$eage,$egen,$edes,$esal,true" >> Employee.txt

        echo "                 Insert Sucessfully                           "
}

Search(){
	echo "enter the employee id"
	read eid
                       
        flag=0
        for j in `cat Employee.txt`
        do
                    eno=$(echo "$j" | cut -d "," -f2)
                    enm=$(echo "$j" | cut -d "," -f1)
                    eage=$(echo "$j" | cut -d "," -f3)
                    egen=$(echo "$j" | cut -d "," -f4)
                    edes=$(echo "$j" | cut -d "," -f5)
                    esal=$(echo "$j" | cut -d "," -f6)
                    
                                               
                    if [ $eid -eq $eno ]
                    then
                            flag=1
                         echo "EName : $enm            "
                    fi
        done
        if [ $flag = 0 ]
        then
             echo "               No Record Found              "
        fi
}

while :
do

read choice

case $choice in
  
  1)  Insert;;
  
  2)  Search;; 
  3)  echo "You have selected the option 3"
      echo "Selected Fruit is Mango. ";;    

  4)  echo "Quitting ..."
      exit;;
  # Default Pattern
  *) echo "invalid option";;
  
esac
  echo -n "Enter your menu choice [1-6]: "
done
